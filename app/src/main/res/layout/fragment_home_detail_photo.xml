<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_home_detail_photo_guid_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_home_detail_photo_guid_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65"
        />
    <ImageView
        android:id="@+id/fragment_home_detail_photo_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/outline_close_black_48"
        app:tint="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        />
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/fragment_home_detail_photo_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_home_detail_photo_guid_top"
        app:layout_constraintBottom_toTopOf="@id/fragment_home_detail_photo_guid_bottom"
        />



</androidx.constraintlayout.widget.ConstraintLayout>