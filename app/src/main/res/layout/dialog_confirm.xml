<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/dialog_confirm_title"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="타이틀"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/dialog_confirm_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="여기에는 팝업 디자인 텍스트가\n들어가는 자리 입니다."
        app:layout_constraintTop_toBottomOf="@id/dialog_confirm_title"
        app:layout_constraintBottom_toTopOf="@id/dialog_confirm_x_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <Button
        android:id="@+id/dialog_confirm_x_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_confirm_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialog_confirm_o_button"
        android:background="@color/white"
        android:text="X"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />
    <Button
        android:id="@+id/dialog_confirm_o_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_confirm_content"
        app:layout_constraintLeft_toRightOf="@id/dialog_confirm_x_button"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/black"
        android:text="O"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>